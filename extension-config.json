{
  "version": "3.2.0",
  "id": "@shopgate/shopify-cart",
  "steps": [
  ],
  "configuration": {
    "shopifyShopAlias": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.frontend.alias"
      }
    },
    "shopifyShopDomain": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.frontend.domain"
      }
    },
    "shopifyAccessToken": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.shopifyAccessToken"
      }
    },
    "shopifyHeadlessStorefrontAccessToken": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.shopifyHeadlessStorefrontAccessToken"
      }
    },
    "enableCartCoupons" : {
      "type" : "static",
      "destination" : "backend",
      "params" : {
        "value" : false
      }
    },
    "usesLiveProducts": {
      "type": "admin",
      "destination": "backend",
      "params": {
        "type": "checkbox",
        "label": "Uses Shopgate Shopify Live Products"
      },
      "default": false
    },
    "languageId": {
      "type": "bigApi",
      "destination": "backend",
      "params": {
        "method": "GET",
        "service": "shop",
        "path": "/v1/%(shopId)s",
        "key": "languageId"
      }
    }
  },
  "components": [
    {
      "id": "CartItemProductLevelDiscount",
      "path": "frontend/portals/CartItemProductLevelDiscount/index.jsx",
      "target": "cart.item.properties.after",
      "type": "portals"
    },
    {
      "id": "CartSubTotalGiftCards",
      "path": "frontend/portals/CartSubTotalGiftCards/index.jsx",
      "target": "cart.payment-bar.totals.grand-total.before",
      "type": "portals"
    },
    {
      "id": "locale/en-US",
      "type": "translations",
      "path": "frontend/locale/en-US.json"
    },
    {
      "id": "locale/de-DE",
      "type": "translations",
      "path": "frontend/locale/de-DE.json"
    }
  ]
}
